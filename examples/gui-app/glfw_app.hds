import glfw as glfw;

def main_loop(window: *glfw.Window): Void {
    // glClear(GL_COLOR_BUFFER_BIT);

    glfw.swap_buffers(window);

    glfw.wait_events();
}

def main(): Void {
    glfw.init();

    val window = glfw.create_window(640, 480, b"Hello World", nullptr, nullptr);

    glfw.make_context_current(window);

    while(not glfw.window_should_close(window)) {
        main_loop(window);
    }

    glfw.terminate();
}